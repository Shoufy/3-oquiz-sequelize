<%- include('partials/header') %>

    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h2 class="h1 display-4">
            <%= locals.title %>
        </h2>
        <p class="lead">
            <%= locals.description %>
        </p>
        <p class="font-weight-bold">par <%= locals.user?.firstname %>
                <%= locals.user?.lastname %>
        </p>
        <p class="lead">
            <%= locals.questions?.length %> questions
        </p>
    </div>

    <div class="row">
        <% if (locals.tags && locals.tags.length) { %>
            <% for (let tag of tags) { %>
                <div class="col-3 p-4 text-center">
                    <a class="btn btn-block btn-lg tag tag--<%= tag.name.toLowerCase() %> " href="#">
                        <%= tag.name %>
                    </a>
                </div>
                <% } %>
                    <% } %>

    </div>

    <div class="row">
        <% if (locals.questions && locals.questions.length) { %>
            <% for (let question of questions) { %>
                <%- include('partials/oneQuestion', question.dataValues) %>
                    <% } %>
            <% } else { %> 
            <h2> Aucune question dans ce quiz</h2>
        <% } %>
    </div>

    <%- include('partials/footer') %>